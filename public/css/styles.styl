@import 'normalize'
@import 'nib'


@font-face {
    font-family: 'paulistana_deconormal';
    src: url('/font/paulistana_deco-webfont.eot');
    src: url('/font/paulistana_deco-webfont.eot?#iefix') format('embedded-opentype'),
    url('/font/paulistana_deco-webfont.woff2') format('woff2'),
    url('/font/paulistana_deco-webfont.woff') format('woff'),
    url('/font/paulistana_deco-webfont.ttf') format('truetype'),
    url('/font/paulistana_deco-webfont.svg#paulistana_deconormal') format('svg');
    font-weight: normal;
    font-style: normal;
}

body
    background black
    font-size 16px


.wrapper
    width 100%
    height 100%

#izq
    background url("/images/bg_noticias.png") repeat-x #272727
    display inline-block
    float left
    height 100%
    width 200px

#der
    background url("/images/bg_principal.png")

.logo_principal
    width 50%

.menu-principal
    font-family  'Dosis', sans-serif
    font-size 1.2em
    color white
    text-shadow 0 0 1px black

.noticia
    h2
        background #FCC105
        color white
        display blocks
        font-family 'paulistana_deconormal'
        font-size 2em
        padding 0.5em

    .noticia-contenido
        background rgba(200,200,200,0.3)
        display inline-block
        margin 1em 2em
        p
            display inline-block
            margin 1em 0 0 0
            vertical-align top
            width 70%
        picture
            width 25%
            display inline-block



