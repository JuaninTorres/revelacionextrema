@import 'normalize'
@import 'nib'


@font-face {
  font-family: 'paulistana_deconormal';
  src: url('paulistana_deco-webfont.eot');
  src: url('paulistana_deco-webfont.eot?#iefix') format('embedded-opentype'),
  url('paulistana_deco-webfont.woff2') format('woff2'),
  url('paulistana_deco-webfont.woff') format('woff'),
  url('paulistana_deco-webfont.ttf') format('truetype'),
  url('paulistana_deco-webfont.svg#paulistana_deconormal') format('svg');
  font-weight: normal;
  font-style: normal;
}

body
  background black
  font-size 16px


.wrapper
  width 100%

#izq
  background url("/images/bg_noticias.png") repeat-x #272727
  display inline-block


#der
  background url("/images/bg_principal.png")

.logo_principal
  width 50%

.noticia
  h2
    display blocks
    font-family 'paulistana_deconormal'
    font-size 1.1em
    color white
    background #FCC105